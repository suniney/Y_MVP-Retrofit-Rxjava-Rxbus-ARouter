<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="base_BannerView">
        <!-- 是否支持循环, 默认 true -->
        <attr name="base_bvIsLoop" format="boolean"/>
        <!-- 是否支持自动滚动, 默认 true -->
        <attr name="base_bvIsAuto" format="boolean"/>
        <!-- 滚动延时, 默认5000ms -->
        <attr name="base_bvDelay" format="integer"/>
        <!-- 滚动间隔, 默认5000ms -->
        <attr name="base_bvInterval" format="integer"/>
        <!-- 高宽比(height/width)-->
        <attr name="base_bvAspectRatio" format="float"/>
        <!-- 底部背景条颜色, 默认透明 -->
        <attr name="base_bvBarColor" format="color"/>
        <!-- 底部背景条在滚动到最后一个item时是否可见, 默认 true -->
        <attr name="base_bvBarVisibleWhenLast" format="boolean"/>
        <!-- 底部背景条padding, 默认10dp -->
        <attr name="base_bvBarPaddingLeft" format="dimension"/>
        <attr name="base_bvBarPaddingTop" format="dimension"/>
        <attr name="base_bvBarPaddingRight" format="dimension"/>
        <attr name="base_bvBarPaddingBottom" format="dimension"/>
        <!-- 标题文字颜色, 默认 #ffffff -->
        <attr name="base_bvTitleColor" format="color"/>
        <!-- 标题文字大小, 默认 14sp -->
        <attr name="base_bvTitleSize" format="dimension"/>
        <!-- 标题是否可见, 默认 false  -->
        <attr name="base_bvTitleVisible" format="boolean"/>
        <!-- 指示器是否可见, 默认 auto  -->
        <attr name="base_bvIndicatorVisible" format="integer">
            <enum name="auto" value="0"/>
            <enum name="always" value="1"/>
            <enum name="never" value="2"/>
        </attr>
        <!-- 指示器位置, 默认 center-->
        <attr name="base_bvIndicatorGravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <!-- 指示器项的 宽度/高度/间距, 默认 6dp -->
        <attr name="base_bvIndicatorWidth" format="dimension"/>
        <attr name="base_bvIndicatorHeight" format="dimension"/>
        <attr name="base_bvIndicatorSelectedWidth" format="dimension"/>
        <attr name="base_bvIndicatorSelectedHeight" format="dimension"/>
        <attr name="base_bvIndicatorGap" format="dimension"/>
        <!-- 指示器未选中颜色, 默认 #88ffffff  -->
        <attr name="base_bvIndicatorColor" format="color"/>
        <!-- 指示器选中颜色, 默认 #ffffff -->
        <attr name="base_bvIndicatorColorSelected" format="color"/>
        <!-- 指示器未选中drawable资源 -->
        <attr name="base_bvIndicatorDrawable" format="reference"/>
        <!-- 指示器选中drawable资源 -->
        <attr name="base_bvIndicatorDrawableSelected" format="reference"/>
    </declare-styleable>
</resources>